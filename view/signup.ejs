<button><a style="font-size: larger;"  href="/login">Login</a>
</button>
</div>

<script>
    function goBack() {
      window.history.back();
    }

        function myFunction() {
  var x = document.getElementById("myInput");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
    </script>
    
    
